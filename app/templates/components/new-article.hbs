
<div class="container">
  <div class="jumbotron">
    <h1>Test New Article</h1>
  </div>
  <div class="jumbotron">
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="text">Text</label>
        {{input value=text id="text"}}
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>
      <button {{action 'saveArticle'}}>Save</button>
    </form>
  </div>
</div>
