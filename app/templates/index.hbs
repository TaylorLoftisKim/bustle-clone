<div class="container">
  <div class="well">
    <h1>Bustle</h1>
  </div>
  <div class="well">


    {{#each model as |article|}}
    <h2>{{article.title}}</h2>
      <p>
        by <strong>{{article.author}}</strong>
      </p>
      {{article-tile article=article}}
      <hr>
    {{/each}}
  </div>
  <div class="well">
    <h3>Add a new Article</h3>
  {{#link-to 'new-article'}}New Article{{/link-to}}
</div>
</div>
